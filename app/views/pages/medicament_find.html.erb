<div class="landing">
	<div class="row-fluid">
		<div class="col-md-6 col-xs-6">
			<h1><%= t 'index.title.drugstores' %></h1>
			<div class="row-fluid">
				<%= form_tag drugstores_path, :method => :get do %>
				    <div class="col-md-5 col-xs-5">
				      <!-- params[:search] permet d'afficher après reload la recherche précédente dans le champ -->
				      <%= text_field_tag :search, params[:search], placeholder: t('drugstores.placeholder'), :style => "width:100%;"%>
				    </div>
				    <div class="col-md-2 col-xs-2">
				      <button type="submit" class="btn btn-bobodoc" >
				        <%= t('drugstores.search_near') %>
				      </button>
				    </div>
				<% end %>
			</div>
		</div>
		<div class="col-md-6 col-xs-6">
			<h1><%= t 'index.title.medicaments' %></h1>
			<div class="row-fluid">
				<%= form_tag find_medicament_path, :method => :get do %>
				    <div class="col-md-5 col-xs-5">
				      <!-- params[:search] permet d'afficher après reload la recherche précédente dans le champ -->
	    		<%= text_field_tag :search, params[:search],:placeholder => "What is your medicament?", :style => "width:100%;"%>
				    </div>
				    <div class="col-md-2 col-xs-2">
				       <button type="submit" class="btn btn-bobodoc-kuler" >
	      				<%= t('medicaments.search_near') %>
	   				   </button>
				    </div>
				<% end %>
			</div>
		</div>
	</div>
</div>