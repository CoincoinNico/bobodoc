<div class="comment-form">
  <%= form_for Comment.new, :remote => true do |f| %>
    <%= f.label :comment %>
    <%= hidden_field_tag :"comment[#{commentable.class.to_s.downcase}_id]", commentable.id %>
    <%= f.text_area :comment %>
    <button type="submit" class="btn btn-primary" data-disable-with="Submitting..."  >Add a comment</button>
  <% end %>
</div>